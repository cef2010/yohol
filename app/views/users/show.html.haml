.row
  #user-show-content.col.s10.offset-s1
    .row{style: "margin-top: 5%; margin-bottom: 5%;"}
      %img.col.s12.m4{src: @user.avatar.url(:med), style: "width: 300px;"}
        -# = link_to "#{@user.user.user_name}", user_path(@goal.user_id)
      .user-info-container.col.s12.m8
        .row
          %h2.col.s12
            = @user.user_name
          %p.col.s12
            Description:
            = @user.description
          %p.col.s12
            Days Left:
            = @user.days_left
    %hr.col.s12
  .col.s10.offset-s1
    %ul
      - @goals.each do |goal|
        -user = goal.user
        %li
          = render(partial: "layouts/goal_card", locals: {goal: goal, user: user})
